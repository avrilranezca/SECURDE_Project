<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>SECURDE_LandingPage</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Restricted URLs</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <servlet>
    <servlet-name>IndexDisplayProductsServlet</servlet-name>
    <servlet-class>servlets.IndexDisplayProductsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexDisplayProductsServlet</servlet-name>
    <url-pattern></url-pattern>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DisplayProductsServlet</servlet-name>
    <servlet-class>servlets.DisplayProductsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayProductsServlet</servlet-name>
    <url-pattern>/product_manager</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DisplayFinancialRecordsServlet</servlet-name>
    <servlet-class>servlets.DisplayFinancialRecordsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayFinancialRecordsServlet</servlet-name>
    <url-pattern>/accounting_manager</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>20000</session-timeout>
    <cookie-config>
      <http-only>true</http-only>
      <secure>true</secure>
    </cookie-config>
    <tracking-mode>COOKIE</tracking-mode>
  </session-config>

  <filter>
    <filter-name>HeaderFilter</filter-name>
    <filter-class>filter.HeaderFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>HeaderFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>filter.SessionFilter</filter-class>
    <init-param>
      <param-name>max-period</param-name>
      <param-value>60000</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>